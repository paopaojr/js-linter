{
    "name": "js-linter",
    "version": "0.1.0",
    "description": "Skeleton project of Javascript/HTML/SASS linter",
    "scripts": {
        "start:dev": "NODE_ENV=development npm run watch & http-server -g -c-1 dist-dev",
        "deploy:prod": "read -e -p \"Really need to deploy to PROD? [y/n]: \" choice; [[ \"$choice\" == [Yy]* ]] && (npm run build:prod) || echo \"Bye\"",
        "build:prod": "npm run test && NODE_ENV=production webpack -p",
        "clean": "rm -Rf dist-dev && rm -Rf dist-prod",
        "watch": "webpack -w",
        "test": "npm run test:html && npm run test:js && npm run test:scss && npm run test:unusedcss && npm run test:functional",
        "test:functional": "node ./test/test.js",
        "test:html": "htmllint html/contents/*.html html/index.html html/partials/*.html",
        "test:js": "eslint html/scripts/*.js html/contents/*.html",
        "test:scss": "sass-lint -v -q",
        "test:unusedcss": "node ./bin/css-unused-checker.js"
    },
    "dependencies": {},
    "devDependencies": {
        "http-server": "0.11.1",
        "css-loader": "2.1.0",
        "script-loader": "0.7.2",
        "style-loader": "0.23.1",
        "sass-loader": "7.1.0",
        "node-sass": "4.11.0",
        "html-loader": "0.5.5",
        "file-loader": "3.0.1",
        "stripcomment-loader": "0.1.0",
        "compression-webpack-plugin": "2.0.0",
        "extract-loader": "3.1.0",
        "webpack-cli": "3.2.1",
        "webpack": "4.29.0",
        "node-qunit-phantomjs": "2.0.1",
        "sass-lint": "1.12.1",
        "eslint": "5.14.1",
        "eslint-plugin-html": "5.0.3",
        "htmllint": "0.7.3",
        "htmllint-cli": "0.0.7",
        "purify-css": "file:./lib/purifycss"
    }
}
